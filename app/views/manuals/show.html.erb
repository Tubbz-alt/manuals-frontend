<%= render partial: "header" %>
<div class='manual-section'>
  <h2><%= @document.section_id %> <span class='title'><%=@document.title %></span></h2>
  <div class='section-content'>
    <%= govspeak_to_html(@document.body) %>
    <% @document.section_groups.each do | group | %>
    <div class='js-collapsible-collection subsection-collection'>
      <h3 class='title'><%= group.title %></h3>
      <ol class='section-links'>
        <% group.sections.each do | section | %>
          <%= render 'section', :section => section %>
        <% end %>
      </ol>
    </div>
    <% end %>


  </div>
</div>
