<% content_for :title, @manual.title %>
<%= render partial: "header" %>
<div class='manual-body'>
  <h2 class='section-title'><%= @document.title %></h2>
  <p class='summary'><%= @document.summary %></p>
  <% if @document.body.present? %>
    <div class='js-collapsible-collection subsection-collection'>
      <div class='title-controls-wrap'>
      </div>
      <div class='collapsible-subsections'>
        <div class='govspeak'>
          <%= @document.body %>
        </div>
      </div>
    </div>
  <% end %>
  <% if @manual.hmrc? %>
    <div class='subsection-collection'>
      <% @document.section_groups.each do | group | %>
        <% if group.title %>
          <%= group.title %>
        <% end %>
      <%= render 'hmrc_sections', :group => group %>
    <% end %>
    </div>
  <% end%>
</div>
