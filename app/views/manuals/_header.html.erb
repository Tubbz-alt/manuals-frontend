<header class="<%= @manual.hmrc? ? 'hmrc' : nil %>">
  <div class='primary'>
    <% if @manual.hmrc? %>
      <span class='manual-type'>HMRC manuals</span>
    <% end %>

    <h1><%= @manual.title %></h1>
    <dl>
      <% if @manual.organisations.any? %>
        <dt>Published by</dt>
        <dd>
          <%= links_to_sentence(@manual.organisations) %>
        </dd>
      <% end %>
    </dl>
  </div>
  <div class='secondary'>
    <div class='secondary-inner'>
      <p>
        Manual updated: <%= marked_up_date(@manual.updated_at) %>
      </p>
    </div>
  </div>
</header>
<ol class='breadcrumb-trail' role='breadcrumbs'>
  <li><%= link_to 'Contents', @manual.url %></li>
  <% if @document %>
    <% @document.breadcrumbs.each do | crumb | %>
      <li> <%= link_to crumb.label, crumb.link %></li>
    <% end %>
    <li class='last-child'><strong><%= @document.breadcrumb %></strong></li>
  <% end %>
</ol>
