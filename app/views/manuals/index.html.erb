<% content_for :extra_headers do %>
  <% if @manual.summary.present? %>
    <meta name='description' content='<%= @manual.summary %>' />
  <% end %>
<% end %>

<% content_for :title, @manual.full_title %>
<article aria-labelledby="manual-title" id="content">
  <%= render partial: "header" %>
  <div class='manual-body'>
    <% if @manual.summary.present? %><p class='summary'><%= @manual.summary %></p><% end %>
    <% if @manual.body.present? %>
      <%= render partial: 'govuk_component/govspeak', locals: {
        content: @manual.body
      } %>
    <% end %>
    <% @manual.section_groups.each do | group | %>
      <% if @manual.hmrc? %>
      <div class='subsection-collection'>
        <%= render 'hmrc_sections', :group => group %>
      </div>
      <% else %>
        <ol class='section-list'>
        <% group.sections.each do | section | %>
          <li>
          <%= link_to section.path, class: "#{section.section_id.present? ? 'subsection-with-id' : ''}" do %>
              <span class='subsection-title-text'><%= section.title %></span>
              <span class='subsection-summary'><%= section.summary %></span>
          <% end %>
          </li>
        <% end %>
        </ol>
      <% end %>
    <% end %>
  </div>
</article>

